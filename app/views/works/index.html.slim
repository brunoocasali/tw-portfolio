#works.content-section.text-center(style="padding-top: 0px;")
  h2.title-up Trabalhos

  - unless @galleries.empty?
    == render 'shared/links', be_link: false

  .gallery-section
    .container.reset-this
      .gallery_holder.grid
        - @galleries.each do |gallery|
            ul.gallery_inner.v4
              - gallery.media.select(&:show?).each do |medium|
                == render partial: 'project_galleries/list', locals: { gallery: gallery, medium: medium }

        .empty-msg.hide
