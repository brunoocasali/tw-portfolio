= form_for @contact do |f|
  .row
    .form-group.has-feedback.has-feedback-left
      label.control-label.sr-only Name
      = f.text_field :name, class: 'form-control input-lg', placeholder: 'Maria Silva Lima'
      i.green-field.form-control-feedback.fa.fa-user.fa-lg.fa-fw

    .form-group.has-feedback.has-feedback-left
      label.control-label.sr-only Email
      = f.text_field :email, class: 'form-control input-lg', placeholder: 'maria_lima@gmail.com'
      i.green-field.form-control-feedback.fa.fa-envelope-o.fa-lg.fa-fw

    .form-group.has-feedback.has-feedback-left
      label.control-label.sr-only Mensagem
      = f.text_area :message, class: 'form-control input-lg', rows: 4, style: 'resize: none', placeholder: 'Ol√°! Eu gostaria de saber se...'
      i.green-field.form-control-feedback.fa.fa-align-left.fa-lg.fa-fw

    .form-group
      = f.submit 'Enviar Contato', class: 'btn btn-default pull-left'
